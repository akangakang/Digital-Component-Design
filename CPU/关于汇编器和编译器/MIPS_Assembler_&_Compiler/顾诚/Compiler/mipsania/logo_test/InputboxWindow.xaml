<Window x:Class="LogoScriptIDE.InputboxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputboxWindow" Height="117" Width="256" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel Height="85" Width="187" Background="White">
        <TextBlock Height="23" Name="ui_showText" Text="Please input a double:" DockPanel.Dock="Top" TextAlignment="Center" />
        <TextBox Height="25" Name="ui_inputText" Width="71" DockPanel.Dock="Top" />
        <Button Name="ui_inputDone" Content="Finish" Height="23" Width="75" DockPanel.Dock="Bottom" Click="ui_inputDone_Click" />
    </DockPanel>
</Window>
